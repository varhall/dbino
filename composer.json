{
	"name": "varhall/dbino",
	"type": "library",
	"description": "Nette Database Active Record Layer",
	"keywords": ["nette", "orm", "database", "active record"],
	"homepage": "https://gitlab.com/varhallpub/dbino",
	"license": "MIT",
        "authors": [
		{
			"name": "Ondrej Sibrava",
			"homepage": "https://www.varhall.cz"
		}
	],
	"support": {
		"issues": "https://gitlab.com/varhallpub/dbino"
	},

	"require": {
		"php": ">=7.4.0",
		"nette/utils": "^3.2.0",
		"nette/database": "^3.0.7",
		"nette/di": "^3.0.6",
		"varhall/utilino": "^1.1",
		"nette/bootstrap": "^3.1"
	},

	"require-dev": {
		"ninjify/nunjuck": "^0.3.0",
		"ninjify/qa": "^0.12",
		"phpstan/phpstan": "^0.12",
		"phpstan/phpstan-deprecation-rules": "^0.12",
		"phpstan/phpstan-nette": "^0.12",
		"phpstan/phpstan-strict-rules": "^0.12",
		"mockery/mockery": "^1.4.3",
		"nette/robot-loader": "v3.4.1"
	},

	"autoload": {
		"classmap": ["src/"]
	},

	"autoload-dev": {
		"classmap": ["tests/fixtures", "tests/engine", "tests/testino"]
	},

	"scripts": {
		"tester:run": [
			"nunjuck tests/cases -s -p php -c tests/config/php.ini"
		],
		"tester:watch": [
			"nunjuck tests/cases -s -p php -c tests/config/php.ini -w tests -w src"
		]
	}
}
