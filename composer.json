{
	"name": "varhall/dbino",
	"type": "library",
	"description": "Nette Database Active Record Layer",
	"keywords": ["nette", "orm", "database", "active record"],
	"homepage": "https://github.com/varhall/dbino",
	"license": "MIT",
        "authors": [
		{
			"name": "Ondrej Sibrava",
			"homepage": "https://www.varhall.cz"
		}
	],
	"support": {
		"issues": "https://github.com/varhall/dbino"
	},

	"require": {
		"php": ">=8.1",
		"nette/database": "^v3.2",
		"nette/di": "^v3.2",
		"nette/security": "^v3.2",
		"varhall/utilino": "^v1.2"
	},

	"require-dev": {
		"ninjify/nunjuck": "^v0.4",
		"mockery/mockery": "^1.6",
		"nette/bootstrap": "^v3.2",
		"nette/robot-loader": "^v4.1",
		"nette/http": "^v3.3"
	},

	"autoload": {
		"psr-4": {
			"Varhall\\Dbino\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests"
		}
	},

	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
